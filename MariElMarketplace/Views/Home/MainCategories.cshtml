@using MariElMarketplace.Helpers
@model List<Product>

@if (Model != null && Model.Any())
{
    <div class="job_listing_area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="section_title">
                        <h3>@Model.FirstOrDefault().ProductType.GetDescription()</h3>
                    </div>
                </div>

            </div>
            <div class="job_lists">
                @{var counter = 0; }
                @for (int i = 0; counter < Model.Count; i++)
                {
                    <div class="jobscenter row">
                        @for (int j = 0; counter < Model.Count; j++)
                        {
                            var model = Model.ElementAt(counter);
                            <partial name="ProductCard" model="model" />
                            counter++;
                        }
                    </div>
                }
            </div>
        </div>
    </div>
}
else
{
<div class="container">
    <div class="row align-items-center">
        <div class="col-lg-6">
            <div class="section_title">
                <h3>Товаров этой секции нет</h3>
            </div>
        </div>

    </div>
</div>
}

