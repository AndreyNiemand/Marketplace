@using MariElMarketplace.Models.ViewModels
@model CarrierLkViewModel

@{var counterK = 0; }
<div class="container">
    <h1>Ваши активные заказы</h1>
    <br />
    @if (Model.MyProducts != null && Model.MyProducts.Any())
    {
        @for (int i = 0; counterK < Model.MyProducts.Count; i++)
        {
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="single_jobs white-bg d-flex justify-content-between">
                        @for (int j = 0; j < 3 && counterK < Model.MyProducts.Count; j++)
                        {
                            var modell = Model.MyProducts.ElementAt(counterK);
                            <div class="jobs_left d-flex align-items-center">
                                <div class="thumb">
                                    <img src="img/svg_icon/1.svg" alt="">
                                </div>
                                <div class="jobs_conetent">
                                    <h4>@modell.Key.Title</h4>
                                    <h2>Сумма доставки: @modell.Key.CarryPrice ₽</h2>
                                    <div class="links_locat d-flex align-items-center">
                                        <div class="location">
                                            <p><i class="fa fa-map-marker"></i>@modell.Value.ToPlaceName</p>
                                        </div>
                                    </div>
                                </div>
                                <a href="/Home/CarrierNo?requestId=@modell.Value.Id" class="boxed-btn3 btn-catagory">Отказаться</a>
                            </div>
                            counterK++;
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div>Пусто</div>
    }

    <h1>Выбрать заказ</h1>
    <br />
    @{counterK = 0; }
    @if (Model.OtherProducts != null && Model.OtherProducts.Any())
    {
        @for (int i = 0; counterK < Model.OtherProducts.Count; i++)
        {
            <div class="row">
                @for (int j = 0; j < 2 && counterK < Model.OtherProducts.Count; j++)
                {
                    <div class="col-lg-12 col-md-12">
                        <div class="single_jobs white-bg d-flex justify-content-between">
                            @{var modell = Model.OtherProducts.ElementAt(counterK);}
                            <div class="jobs_left d-flex align-items-center">
                                <div class="thumb">
                                    <img src="img/svg_icon/1.svg" alt="">
                                </div>
                                <div class="jobs_conetent">
                                    <h4>@modell.Key.Title</h4>
                                    <h2>Сумма доставки: @modell.Key.CarryPrice</h2>
                                    <div class="links_locat d-flex align-items-center">
                                        <div class="location">
                                            <p><i class="fa fa-map-marker"></i>@modell.Value.ToPlaceName</p>
                                        </div>
                                    </div>
                                </div>
                                <a href="/Home/CarrierYes?requestId=@modell.Value.Id" class="boxed-btn3 btn-catagory">Взять задачу</a>
                            </div>
                            @{counterK++;}
                        </div>
                    </div>
                }
            </div>
        }
    }
    else
    {
        <div>Нет заказов, доступных для выбора</div>
    }
</div>