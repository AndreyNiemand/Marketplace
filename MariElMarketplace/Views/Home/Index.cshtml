@{
    ViewData["Title"] = "Home Page";
}
@using System.Linq;
@using MariElMarketplace.Models.ViewModels
@model HomeViewModel

<div class="slider_area">
    <div class="single_slider  d-flex align-items-center slider_bg_1">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-7 col-md-6">
                    <div class="slider_text">
                        <h3 class="wow fadeInLeft headerfs" data-wow-duration="1s" data-wow-delay=".3s">Фермерские продукты Марий Эл</h3>
                        <p class="wow fadeInLeft" data-wow-duration="1s" data-wow-delay=".4s">Получайте свежую и полезную еду на дом от местных фермеров</p>
                        <div class="sldier_btn wow fadeInLeft" data-wow-duration="1s" data-wow-delay=".5s">
                            <a href="#" class="boxed-btn3">Зарегистрироваться</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="ilstration_img wow fadeInRight d-none d-lg-block text-right" data-wow-duration="1s" data-wow-delay=".2s">
        <img src="img/banner/illustration.png" alt="">
    </div>
</div>
<div class="job_listing_area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="section_title">
                    <h3>Популярно</h3>
                </div>
            </div>

        </div>
        <div class="job_lists">

            @{
                var counter = 0;
                var maxLength = 6;
            }
            @for (int i = 0; counter < maxLength; i++)
            {
                <div class="jobscenter row">
                    @for (int j = 0; j < 3 && counter < maxLength; j++)
                    {
                        var model = Model.BestProductTypes.ElementAt(counter);
                        <partial name="BestProductCard" model="model" />
                        counter++;
                    }
                </div>
            }
        </div>
    </div>
</div>
<div class="catagory_area">
    <div class="container">
        <div class="row cat_search">
            <div class="col-lg-3 col-md-4">
                <div class="single_input">
                    <input type="text" placeholder="Поиск">
                </div>
            </div>
            <div class="col-lg-3 col-md-4">
                <div class="single_input">
                    <select class="wide">
                        <option data-display="Поставщик">Поставщик</option>
                        <option value="1">Dhaka</option>
                        <option value="2">Rangpur</option>
                        <option value="4">Sylet</option>
                    </select>
                </div>
            </div>
            <div class="col-lg-3 col-md-4">
                <div class="single_input">
                    <select class="wide">
                        <option data-display="Категория">Категория</option>
                        <option value="1">Молочные продукты</option>
                        <option value="2">Мясо</option>
                        <option value="4">Птица</option>
                    </select>
                </div>
            </div>
            <div class="col-lg-3 col-md-12">
                <div class="job_btn">
                    <a href="#" class="boxed-btn3">Найти</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="popular_search d-flex align-items-center">
                    <partial name="MainCategoryList" />
                </div>
            </div>
        </div>
    </div>
</div>
<div class="popular_catagory_area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section_title mb-40">
                    <h3>Выгодные предложения</h3>
                </div>
            </div>
        </div>
        <div class="row">
            @{var counterK = 0; }
            @for (int i = 0; counterK < Model.BestProductTypes.Count; i++)
            {
                <div class="jobscenter row">
                    @for (int j = 0; j < 3 && counterK < Model.BestProductTypes.Count; j++)
                    {
                        var model = Model.BestProductTypes.ElementAt(counterK);
                        <partial name="Category" model="model.Value" />
                        counterK++;
                    }
                </div>
            }
        </div>
    </div>
</div>
