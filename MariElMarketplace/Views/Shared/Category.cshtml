@using MariElMarketplace.Helpers

@model Product

@{var modell = Model;}

<div class="category-test col-lg-4 col-xl-3 col-md-6">
    <div class="single_catagory">
        <div class="row">
            <img class="column1" src="img/banner/testmilk.png" alt="">
            <div class="column2">
                <a><h4>@modell.SubType</h4></a>
                <p class="job-price">от @modell.Price руб. за @modell.MinBuyCount @EnumHelper.GetDescription(modell.Unit) из @modell.PlaceName</p>
                <p>@modell.Description</p>
                <a href="/Home/Categories?subType=@modell.SubType" class="boxed-btn3 btn-catagory">Подробнее</a>
            </div>
        </div>
    </div>
</div>