@using MariElMarketplace.Contexts;
@using MariElMarketplace.Models;
@using System.Security.Claims;
@using System.Linq;
@using MariElMarketplace.Calculators
@inject CalculatorService calculatorService
@inject Context context

@{
    var roleType = Role.Customer;
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    if (userId != null)
    {
        var role = context.Roles.FirstOrDefault(x => x.UserId == userId);
        if (role != null)
        {
            roleType = role.Role;
        }
    }
}
